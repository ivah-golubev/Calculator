<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="590"
        x:Class="Calculator.MainWindow"
        Title="Calculator"
        Width="350"
        Height="560"
        CanResize="False">
       
    <Window.Styles>
        <StyleInclude Source="/Styles/MainStyle.axaml"/>
    </Window.Styles>

    <Border BorderThickness="13" BorderBrush="#2c3a36">


        <Grid RowDefinitions=" * , 3.5*">


            <Border Classes="TextPanel" Width="320" Height="125">
                <StackPanel Grid.Row="0" Classes="TextPanel">
                    <TextBlock Text="Result" Classes="Result"  HorizontalAlignment="Right" Padding="0, 18, 5, 20"/>
                    <TextBlock Text="Operations" Classes="Operations" Height="40" HorizontalAlignment="Right" Padding="0, 0, 5, 0"/>
                </StackPanel>
            </Border>



            <Grid Grid.Row="1">
                <Grid ColumnDefinitions="*,*,*,*" HorizontalAlignment="Center">


                    <StackPanel Grid.Column="0">
                        <WrapPanel Orientation="Vertical">
                            <Button Content="CE"/>
                            <Button Content="7"/>
                            <Button Content="4"/>
                            <Button Content="1"/>
                            <Button Content="." FontSize="30"/>
                        </WrapPanel>
                    </StackPanel>


                    <StackPanel Grid.Column="1">
                        <WrapPanel Orientation="Vertical">
                            <Button Content="x²"/>
                            <Button Content="8"/>
                            <Button Content="5"/>
                            <Button Content="2"/>
                            <Button Content="0"/>
                        </WrapPanel>
                    </StackPanel>


                    <StackPanel Grid.Column="2">
                        <WrapPanel Orientation="Vertical">
                            <Button Content="√x"/>
                            <Button Content="9"/>
                            <Button Content="6"/>
                            <Button Content="3"/>
                            <Button Content="%"/>
                        </WrapPanel>
                    </StackPanel>


                    <StackPanel Grid.Column="3">
                        <WrapPanel Orientation="Vertical">
                            <Button Content="÷"/>
                            <Button Content="×"/>
                            <Button Content="-" FontSize="40"/>
                            <Button Content="+"/>
                            <Button Content="="/>
                        </WrapPanel>
                    </StackPanel>


                    
                </Grid>

            </Grid>

        </Grid>
    
    </Border>

</Window>
